<Window x:Class="ECGTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ECGTools"
        mc:Ignorable="d"
        Title="MainWindow" Height="442.8" Width="800">
    <Grid>
        <Menu Name="Menu" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.ColumnSpan="4" Panel.ZIndex="-3">
            <MenuItem Name="Menu_File" Header="Файл">
                <MenuItem Name="Menu_Import_Open" Header="Импорт записи"></MenuItem>
                <MenuItem Name="Menu_Export_Open" Header="Экспорт записи"></MenuItem>
            </MenuItem>
        </Menu>
        <WpfPlot Name="Plot" Margin="0,112,0,112.0"/>
        <Button Name="btClassificate" Content="Классификация" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="130" Height="50"/>
        <Button Name="btDetect" Content="Детектирование QRS комплексов" HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Bottom" Width="205" Height="50"/>
        <CheckBox Name="cbFilt" Content="Фильтрация сигнала" HorizontalAlignment="Left" Margin="10,0,0,25" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
